
#coffee-box
  width 800px
  display block
  height 300px
  background hsl(0,0,80)
  box-shadow 0px 0px 20px hsl(0,0,50)
  box-sizing border-box
  position absolute
  // top 80px
  // left 200px
  z-index 7777
  width-space nomal

  *
    box-sizing border-box
    
  ::-webkit-scrollbar
    width 4px
    height 4px

  ::-webkit-scrollbar-track
    width 4px
    background hsl(0,90,95)

  ::-webkit-scrollbar-thumb
    background hsl(0,50,80)
    border-radius 2px

  *
    font-size 14px
    line-height 20px
    font-family monospace
    border none
    outline none
    box-shadow none
    border-radius none

#coffee-code, #coffee-result
  float left
  padding 0px
  margin 0px
  width 50%
  height 100%
  overflow-x hidden
  overflow-y scroll

#coffee-code
  resize none
  border-radius 2px
  padding 40px 6px 100px

#coffee-result
  line-height 30px
  padding 14px 10px 60px

  .coffee-print
    margin 2px 0px
    background hsl(0,30,40)
    padding 4px
    color white
    line-height 18px
    border-radius 3px